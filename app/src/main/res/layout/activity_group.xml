<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/nav" layout="@layout/item_nav_bar"/>

    <LinearLayout
        android:id="@+id/group_name"
        android:layout_below="@id/nav"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/dark_blue_radius_background"
        android:elevation="10dp"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="20dp"
        android:baselineAligned="false">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/g_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group Name"
                android:textSize="24sp"
                android:layout_marginBottom="10dp"
                android:paddingHorizontal="20dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/t_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher Name"
                android:textSize="16sp"
                android:paddingHorizontal="20dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/g_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group code"
                android:textSize="16sp"
                android:paddingHorizontal="20dp"
                android:textColor="@color/white"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_add_files"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="+"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/my_dark_blue"
                android:background="@drawable/white_circle"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/btns"
        android:layout_below="@id/group_name"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:paddingHorizontal="20dp"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_assignment"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:text="Assignments"
                android:textSize="18sp"
                android:background="@drawable/vlight_blue_radius_background"
                android:textColor="@color/my_dark_blue"
                android:layout_margin="5dp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_material"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:text="Materials"
                android:textSize="18sp"
                android:background="@drawable/vlight_orange_radius_background"
                android:textColor="@color/my_dark_blue"
                android:padding="18dp"
                android:layout_margin="5dp"
                android:textAllCaps="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_notification"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:text="Announcement"
                android:textSize="18sp"
                android:background="@drawable/vlight_blue_radius_background"
                android:textColor="@color/my_dark_blue"
             android:layout_margin="5dp"
                android:textAllCaps="false"/>
        </LinearLayout>



    </LinearLayout>

</RelativeLayout>