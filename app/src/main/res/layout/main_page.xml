<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        /*blue card desgin*/
        <ImageView
            android:id="@+id/main_card"
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/main_card" />


        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/main_pic"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/profile_image_girl"/>

        </LinearLayout>


        /*get the text from calender*/

        <TextView
            android:id="@+id/cal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingLeft="30dp"
            android:text="25, Aug"
            android:textColor="#000000"
            android:textSize="16dp" />

        /*basic hello text*/

        <TextView
            android:id="@+id/hello_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cal"
            android:text="Hello , "
            android:paddingLeft="30dp"
            android:textColor="#000000"
            android:textSize="28dp"
            android:textStyle="bold"
            />

        /*get the text from user name*/

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cal"
            android:layout_toRightOf="@id/hello_text"
            android:text="MMM"
            android:textColor="#000000"
            android:textSize="28dp" />

        /* linear layout for search bar and join Button*/

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_card"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">

        </LinearLayout>


        /* to add the group text */

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear1"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp">

            <TextView
                android:id="@+id/group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Groups "
                android:textColor="#000000"
                android:textSize="28dp"
                android:textStyle="bold" />

            <View
                android:layout_width="200dp"
                android:layout_height="wrap_content" />


        </LinearLayout>

        /* to add the group blocks */
        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear2"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:background="@drawable/dark_blue_radius_background"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:elevation="10dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"/>
                <Button
                    android:id="@+id/btn_group1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_radius_background"
                    android:text="DataBase"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:background="@drawable/dark_blue_radius_background"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:elevation="10dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btn_group2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_radius_background"
                    android:text="Java"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    />
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


</ScrollView>