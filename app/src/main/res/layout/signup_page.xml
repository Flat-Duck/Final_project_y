<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    /*the blue Card*/
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="213dp"
        android:background="@drawable/card"
        android:orientation="vertical">

        /*the icon place*/
        <TextView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:text=" App Name "
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/signup_image_3d"
            />
    </LinearLayout>
    /******************************************************************/
    /* Signup   Text* /

    <TextView
        android:id="@+id/Signup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="250dp"
        android:text=" Signup "
        android:textColor="#000000"
        android:textSize="40dp"
        android:textStyle="bold" />

    /* as student Text*/
    <TextView
        android:id="@+id/student_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:text=" as student"
        android:textColor="#000000"
        android:textSize="40dp"
        android:layout_below="@id/Signup_text"
        />
    /******************************************************************/
    /*to add scrolling to the edit texts*/

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/student_text"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/rounded_shape"
                android:padding="10dp">
                /* id Edit Text*/

                <ImageView
                    android:id="@+id/icon_id"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_below="@id/student_text"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/id" />

                <EditText
                    android:id="@+id/edText1"
                    style="none"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:hint="ID"
                    android:maxLength="8"
                    android:textSize="24dp" />

            </LinearLayout>
            /*the end of id linear*/
            /******************************************************************/

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_shape"
                android:padding="10dp">
                /* id Edit Text*/

                <ImageView
                    android:id="@+id/icon_user"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/user" />

                <EditText
                    android:id="@+id/edText2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:hint="Full Name"
                    android:maxLength="30"
                    android:textSize="24dp" />

            </LinearLayout>
            /*the end of id linear*/

            /******************************************************************/

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_shape"
                android:padding="10dp">
                /* id Edit Text*/

                <ImageView
                    android:id="@+id/icon_pass"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/password" />

                <EditText
                    android:id="@+id/edText3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLength="25"
                    android:textSize="24dp" />

            </LinearLayout>
            /*the end of id linear*/

            /******************************************************************/

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_shape"
                android:padding="10dp">
                /* id Edit Text*/

                <ImageView
                    android:id="@+id/icon_pass2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/password" />

                <EditText
                    android:id="@+id/confirm_pass"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:maxLength="25"
                    android:textSize="24dp" />

            </LinearLayout>
            /*the end of id linear*/

            /******************************************************************/

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_shape"
                android:padding="10dp">
                /* id Edit Text*/

                <ImageView
                    android:id="@+id/icon_spec"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/pc" />

                <EditText
                    android:id="@+id/spec"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:hint="specialization"
                    android:maxLength="25"
                    android:textSize="24dp" />

            </LinearLayout>
            /*the end of id linear*/

            /******************************************************************/

            <Button
                android:id="@+id/signup_button"
                android:layout_width="340dp"
                android:layout_height="56dp"
                android:layout_below="@id/edText2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/round_button_darkblue"
                android:text="Signup"
                android:textColor="#ffffff"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/signupText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_button"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:text=" Login "
                android:textColor="#000000"
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>
    /*the end of scroll*/









</RelativeLayout>