<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_dark_blue">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/left_arrow_48_white"
            android:layout_marginStart="20dp"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textSize="40dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Password"
            android:textSize="25dp"
            android:textColor="@color/white"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >

        <EditText
            android:id="@+id/text_input_pass"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/rectangle_text_input_stoke_orange"
            android:drawableStart="@drawable/pass_icon_gray"
            android:drawablePadding="8dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/text_error_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_input_pass"
            android:layout_marginStart="15dp"
            android:text=" "
            android:textColor="@color/my_red"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/text_input_conf_pass"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/text_error_pass"
            android:layout_alignLeft="@id/text_input_pass"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle_text_input_stoke_orange"
            android:drawableStart="@drawable/pass_icon_gray"
            android:drawablePadding="8dp"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/text_error_conf_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_input_conf_pass"
            android:layout_marginStart="15dp"
            android:text=" "
            android:textColor="@color/my_red"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/text_error_conf_pass"
            android:layout_alignLeft="@id/text_input_conf_pass"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle_button_orange"
            android:text="save"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </RelativeLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/orange_rectangle"
            android:layout_marginEnd="20dp"/>
    </LinearLayout>

</LinearLayout>