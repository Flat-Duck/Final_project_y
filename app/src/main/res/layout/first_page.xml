<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222242"
    >
    /*the icon place*/

    <TextView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:text=" App Name "
        android:textColor="#ffffff"
        android:textSize="20dp" />

    /*main image */
    <ImageView
        android:src="@drawable/main_circle"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        />

    <ImageView
        android:layout_width="387dp"
        android:layout_height="332dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="135dp"
        android:src="@drawable/main_image" />

    /* lets get started text*/
    <TextView
        android:id="@+id/lets_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="502dp"
        android:layout_marginBottom="25dp"
        android:text=" Letâ€™s get started"
        android:textColor="#ffffff"
        android:textSize="20dp" />


    /*login Button*/

    <Button
        android:id="@+id/loginButton"
        android:layout_width="340dp"
        android:layout_height="56dp"
        android:layout_below="@id/lets_get"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_button"
        android:text="Login"
        android:textSize="18dp"
        app:cornerRadius="25dp"
        android:onClick="login"/>


    /*signUp Button*/

    <Button
        android:id="@+id/sginupButton"
        android:layout_width="340dp"
        android:layout_height="56dp"
        android:layout_below="@id/loginButton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_button_white"
        android:text="Signup"
        android:textColor="#000000"
        android:textSize="18dp"
        app:cornerRadius="25dp"

        />



</RelativeLayout>