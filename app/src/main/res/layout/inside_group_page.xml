<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/my_dark_blue"
        android:paddingTop="5dp">
        <ImageView
            android:id="@+id/back_to_main_page"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/left_arrow_48_white"
            android:layout_marginStart="20dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/logo"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_dark"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>
    </LinearLayout>

    /*header card*/
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:background="@drawable/dark_blue_radius_background"
        android:elevation="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/text_view_g_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group Name"
                android:textSize="24sp"
                android:layout_marginBottom="10dp"
                android:paddingStart="20dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/text_view_tr_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher Name"
                android:textSize="16sp"
                android:paddingStart="20dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/text_view_g_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group code"
                android:textSize="16sp"
                android:paddingStart="20dp"
                android:textColor="@color/white"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_add_files"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="+"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/my_dark_blue"
                android:background="@drawable/white_circle"/>
        </LinearLayout>

    </LinearLayout>
    /**********************/

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:paddingEnd="5dp">

            <Button
                android:id="@+id/btn_assignment"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:text="Assignments"
                android:textSize="18dp"
                android:background="@drawable/vlight_blue_radius_background"
                android:textColor="@color/my_dark_blue"
                android:padding="18dp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_material"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:text="Materials"
                android:textSize="18dp"
                android:background="@drawable/vlight_orange_radius_background"
                android:textColor="@color/my_dark_blue"
                android:padding="18dp"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginEnd="20dp"
            android:paddingStart="5dp">
            <Button
                android:id="@+id/btn_enquiry"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:text="Enquiries"
                android:textSize="18dp"
                android:background="@drawable/vlight_orange_radius_background"
                android:textColor="@color/my_dark_blue"
                android:padding="18dp"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/btn_notification"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:text="Notifications"
                android:textSize="18dp"
                android:background="@drawable/vlight_blue_radius_background"
                android:textColor="@color/my_dark_blue"
                android:padding="18dp"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"/>
        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>

</LinearLayout>